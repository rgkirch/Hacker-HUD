{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run tests",
            "type": "shell",
            "command": "cd test/build ./hhTest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": [ "relative", "${workspaceFolder}"],
                    "pattern":{
                        "regexp": "^(.*):(\\d+): (Failure)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                }
            ]
        },
        {
            "label": "make tests",
            "type": "shell",
            "command": "cd test/build && make hhTest",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}