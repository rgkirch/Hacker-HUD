{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tests",
            "type": "shell",
            "command": "cd test/build && make hhTest && ./hhTest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": [
                {
                    "owner": "googletest",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": "^.*Hacker-HUD(.*):(\\d+): Failure$",
                            "file": 1,
                            "line": 2,
                        },
                        {
                            "regexp": "^.*(Expected.*)$",
                            "message": 1
                        }
                    ]
                },
                {
                    "owner": "cpp",
                    "pattern":{
                        "regexp": "^(.*/)+(.*\\....):(\\d*):(\\d*).*(error: .*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    }
                }
            ]
        }
    ]
}